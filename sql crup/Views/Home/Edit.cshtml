@model sql_crup.Models.Persons
@{
    ViewData["Title"] = "Edit";
}


    <form style="width: 300px; margin: auto" asp-action="Edited">
        <input type="hidden" asp-for="PersonID" />
        <div class="form-group">
            <label>Last Name</label>
            <input class="form-control" asp-for="LastName" type="text" />
        </div>
        <div class="form-group">
            <label>First Name</label>
            <input class="form-control" asp-for="FirstName" type="text" />
        </div>
        <div class="form-group">
            <label>Address</label>
            <input class="form-control" asp-for="Address" type="text" />
        </div>
        <div class="form-group">
            <label>City</label>
            <input class="form-control" asp-for="City" type="text" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Edit</button>
        </div>
    </form>
